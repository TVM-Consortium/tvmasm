{
  "name": "tvm-lsp-client-prerelease",
  "displayName": "TVM Language Support",
  "description": "Language client extension for TVM language server",
  "publisher": "Rexagon",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.65.0"
  },
  "repository": {
    "url": "https://github.com/broxus/everscale-asm"
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "main": "./out/main.js",
  "contributes": {
    "languages": [
      {
        "id": "tvm",
        "extensions": [
          ".tvm"
        ]
      }
    ],
    "grammars": [
      {
        "language": "tvm",
        "scopeName": "source.tvm",
        "path": "./syntaxes/tvm.tmLanguage.json"
      }
    ],
    "configuration": {
      "properties": {
        "tvm.languageServerPath": {
          "type": "string",
          "description": "Path to the tvm-lsp-server binary"
        }
      }
    },
    "commands": [
      {
        "command": "tvm.restartLanguageServer",
        "title": "TVM: Restart Language Server"
      }
    ]
  },
  "categories": [
    "Formatters",
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:tvm"
  ],
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.18",
    "@types/vscode": "^1.65.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.18.17",
    "vscode-test": "^1.3.0"
  }
}
